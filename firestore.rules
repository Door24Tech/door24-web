rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Blog posts - public read, authenticated write
    match /blogPosts/{postId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Categories - public read, authenticated write
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Waitlist - public write (anyone can sign up), public read for duplicate checking
    match /waitlist/{entryId} {
      allow read: if true; // Allow public reads for duplicate email checking
      allow create: if request.resource.data.email is string 
                    && request.resource.data.source is string
                    && request.resource.data.status == "active";
      allow update, delete: if false; // No updates or deletes via client (admin can do via console)
    }
    
    // Support submissions - public write (anyone can submit), authenticated read (admin only)
    match /support/{submissionId} {
      allow read: if request.auth != null; // Only authenticated admins can read
      allow create: if request.resource.data.name is string
                    && request.resource.data.email is string
                    && request.resource.data.inquiryType is string
                    && request.resource.data.message is string
                    && request.resource.data.status == "new";
      allow update, delete: if false; // No updates or deletes via client (admin can do via console)
    }
  }
}

