{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      { "source": "**/**.html", "headers": [{ "key": "Cache-Control", "value": "no-cache" }] },
      { "source": "**", "headers": [{ "key": "X-Content-Type-Options", "value": "nosniff" }] }
    ],
    "rewrites": [
      { "source": "**", "destination": "/index.html" }
    ]
  }
}


